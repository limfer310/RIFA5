    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/bootstrap-icons.css" rel="stylesheet">
    <link href="css/templatemo-topic-listing.css" rel="stylesheet">

    <style>

        /* --- Contenido Principal y Superposición --- */
        .overlay {
            width: 100%;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
            padding-top: 100px; /* Espacio para la barra de navegación superior */
            background: rgba(10, 25, 47, 0.55); /* Fondo oscuro semitransparente */
        }

        /* --- Título del Dashboard --- */
        h1 {
            font-family: 'Unbounded', sans-serif;
            font-size: clamp(2.5rem, 5vw, 3.5rem); /* Tamaño de fuente adaptable */
            font-weight: 700;
            margin-bottom: 30px;
            text-shadow: 0 0 15px rgba(0, 170, 255, 0.5);
            letter-spacing: 0.05em;
            text-align: center;
        }

        /* --- Estilo Base para Componentes (Tarjetas de datos y Gráfico) --- */
        .dashboard-bar, .chart-container {
            width: 95%;
            background: rgba(23, 42, 69, 0.4);
            padding: 25px;
            border-radius: 16px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(0, 170, 255, 0.2);
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.2);
            margin-bottom: 30px;
        }

        /* --- Barra de Datos Específica --- */
        .dashboard-bar {
            max-width: 1200px;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            gap: 20px;
        }

        /* --- Contenedor del Gráfico Específico --- */
        .chart-container {
            max-width: 900px;
        }

        /* --- Bloques de Información (Contadores) --- */
        .info-block {
            flex: 1 1 180px; /* Permite que se ajusten al espacio */
            min-width: 180px;
            text-align: center;
            padding: 15px;
            border-radius: 10px;
            transition: background-color 0.3s ease;
        }

            .info-block:hover {
                background: rgba(255, 255, 255, 0.05); /* Sutil efecto al pasar el ratón */
            }

            .info-block h3 {
                margin: 0 0 8px 0;
                font-size: 1.1em;
                font-weight: 400;
                color: #a8b2d1; /* Color de texto secundario */
            }

            .info-block .number {
                font-size: 2.2em;
                font-weight: 700;
                color: #00e6e6; /* Color cian para los números */
                text-shadow: 0 0 8px #00e6e6;
            }

        /* --- Botones de Acción --- */
        .buttons {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
            justify-content: center;
            margin-bottom: 30px; /* Espacio antes del gráfico */
        }

            .buttons button {
                padding: 12px 24px;
                background-color: #00aaff; /* Color primario */
                border: none;
                border-radius: 8px;
                color: #0a192f; /* Texto oscuro para contraste */
                font-weight: bold;
                font-size: 0.95rem;
                cursor: pointer;
                transition: transform 0.2s ease, box-shadow 0.3s ease, background-color 0.3s ease;
                box-shadow: 0 2px 10px rgba(0, 170, 255, 0.3);
            }

                .buttons button:hover {
                    background-color: #00e6e6; /* Color secundario al pasar el ratón */
                    transform: translateY(-3px);
                    box-shadow: 0 4px 15px rgba(0, 230, 230, 0.4);
                }

        /* --- Lienzo del Gráfico --- */
        canvas#materialChart {
            background: transparent; /* El contenedor ya tiene el fondo */
            padding: 10px;
        }




        body {
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            background-color: #000;
            color: #fff;
            overflow-x: hidden;
            overflow-y: auto;
        }

        main {
            position: relative;
            z-index: 1;
        }

        .site-header {
            background-color: rgba(0, 0, 0, 0.7);
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            padding: 15px 20px;
            z-index: 1000;
        }

            .site-header .container {
                display: flex;
                justify-content: center; /* Center the content */
                align-items: center;
            }

            .site-header .row {
                display: flex;
                justify-content: space-between;
                align-items: center;
                width: 100%; /* Make row take full width of container */
            }

        .site-header-text {
            display: flex;
            align-items: center;
            text-decoration: none;
            color: #fff;
            font-weight: 700;
            font-family: 'Unbounded', sans-serif;
            font-size: 1.5rem;
            margin-right: auto; /* Push logo to the left */
        }

            .site-header-text i {
                margin-right: 8px;
                font-size: 1.8rem;
            }

        .social-icon {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            align-items: center;
        }

        .social-icon-item {
            margin-left: 15px;
        }

        .social-icon-link {
            color: #fff;
            font-size: 1.2rem;
            text-decoration: none;
            opacity: 0.7;
            transition: opacity 0.3s ease;
        }

            .social-icon-link:hover {
                opacity: 1;
            }

        .custom-btn {
            background-color: transparent;
            color: #fff;
            border: 2px solid #fff;
            padding: 8px 15px;
            border-radius: 25px;
            text-decoration: none;
            transition: opacity 0.3s ease;
            margin-left: 20px; /* Add space before the button */
        }

            .custom-btn:hover {
                background-color: #fff;
                color: #000;
            }

        .offcanvas-icon {
            color: #fff;
            font-size: 1.5rem;
            cursor: pointer;
            margin-left: 20px; /* Add space before the offcanvas icon */
        }

        .offcanvas {
            background-color: #111;
            color: #fff;
        }

        .offcanvas-header .btn-close {
            color: #fff;
            opacity: 0.7;
        }

        .offcanvas-body nav ul {
            list-style: none;
            padding: 0;
            margin: 0;
            text-align: center;
        }

            .offcanvas-body nav ul li {
                margin-bottom: 15px;
            }

                .offcanvas-body nav ul li a {
                    color: #fff;
                    text-decoration: none;
                    font-size: 1.1rem;
                    opacity: 0.8;
                    transition: opacity 0.3s ease;
                }

                    .offcanvas-body nav ul li a.active,
                    .offcanvas-body nav ul li a:hover {
                        opacity: 1;
                    }

        .modal-content {
            background-color: #222;
            color: #fff;
            border: none;
            border-radius: 10px;
        }

        .modal-header {
            border-bottom: 1px solid #333;
        }

        .modal-title {
            color: #fff;
        }

        .modal-body .form-control {
            margin-bottom: 15px;
            border-radius: 25px;
            background-color: #333;
            border: none;
            color: #fff;
            padding: 10px 15px;
        }

            .modal-body .form-control::placeholder {
                color: #777;
            }

        .modal-body button.form-control {
            background-color: #fff;
            color: #000;
            border: none;
            padding: 12px 20px;
            cursor: pointer;
            border-radius: 25px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .modal-body button.form-control:hover {
                background-color: #eee;
                color: #111;
            }

        .modal-footer {
            border-top: 1px solid #333;
            justify-content: center;
        }

        .hero-section {
            position: relative;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 60px 20px;
            color: white;
        }

        .video-wrap {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: -1;
        }

        .custom-video {
            position: absolute;
            top: 50%;
            left: 50%;
            min-width: 100%;
            min-height: 100%;
            width: auto;
            height: auto;
            transform: translateX(-50%) translateY(-50%);
            object-fit: cover;
        }

        .hero-section .container {
            position: relative;
            display: flex; /* Changed to flex for horizontal alignment */
            align-items: center; /* Vertically align items in the flex container */
            justify-content: center; /* Center overall content */
            padding-left: 0; /* Remove default padding for better control */
            padding-right: 0; /* Remove default padding for better control */
        }

        .hero-image-container {
            position: relative; /* Changed to relative so it flows with flexbox */
            left: auto; /* Reset left position */
            top: auto; /* Reset top position */
            transform: none; /* Reset transform */
            width: 300px; /* Keep the width you had */
            height: auto;
            z-index: 2;
            margin-right: 50px; /* Add margin to the right of the image */
            margin-left: 5%; /* Keep existing margin-left for overall positioning */
        }

        .hero-image {
            max-width: 100%;
            height: auto;
            display: block;
        }

        .hero-content {
            flex-grow: 1;
            text-align: left; /* Align text to the left */
            margin-left: 0; /* Reset margin-left, as image margin will handle spacing */
            position: relative;
            z-index: 3;
            margin-top: 0; /* Reset margin-top */
            color: white;
        }

            .hero-content a {

                color: white;
            }

        .hero-section small {
            color: #fff;
            display: block;
            margin-bottom: 10px;
            font-style: italic;
        }

        .hero-section h1 {
            font-family: 'Unbounded', sans-serif;
            font-size: 3.5rem;
            font-weight: 700;
            margin-top: 0;
            margin-bottom: 20px;
            letter-spacing: 0.1em;
        }

        .countdown {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            margin-top: 30px;
        }

        .countdown-item {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .countdown-title {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 5px;
            font-family: 'Unbounded', sans-serif;
        }

        .countdown-text {
            font-size: 0.9rem;
            color: #aaa;
        }

        .hero-buttons {
            margin-top: 10px;
            display: flex;
            gap: 20px;
            justify-content: flex-start; /* Align buttons to the left */
        }

            .hero-buttons a {
                background-color: #143B5B;
                color: #fff;
                border: 2px solid #143B5B;
                padding: 10px 20px;
                border-radius: 25px;
                text-decoration: none;
                transition: background-color 0.3s ease, color 0.3s ease;
            }



                .hero-buttons a:hover {
                    background-color: #143B5B;
                    color: #000;
                }

        .imagen-con-borde-redondeado {
            border-radius: 90px;
            overflow: hidden;
            width: 300px;
            height: 300px;
            /* No longer need to absolutely position it, flexbox will handle it */
        }

            .imagen-con-borde-redondeado img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }


    </style>
</head>

<body>

