@model RIFA.ViewModels.PasswordResetViewModel // <-- Definimos el modelo para la vista
@{
    ViewData["Title"] = "RIFA | Restablecer Contraseña";
    Layout = "_Layout"; // Asumo que tienes un _Layout.cshtml para el diseño general
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>RIFA | Proyecto de Reciclaje</title>
        <style>
body {
    margin: 0;
    padding: 0;
    font-family: 'Poppins', sans-serif;
    background-color: #000;
    color: #fff;
    overflow: hidden; /* Asegura que el video de fondo no cause scroll */
}

main {
    position: relative;
    z-index: 1;
    display: flex; /* Activa flexbox para centrar el contenido */
    justify-content: center; /* Centra horizontalmente */
    align-items: center; /* Centra verticalmente */
    min-height: 100vh; /* Asegura que el main ocupe al menos el 100% del viewport */
    padding-top: 80px; /* Ajusta el espacio superior para el header fijo */
    box-sizing: border-box; /* Incluye el padding en el cálculo del alto */
}

.site-header {
    background-color: rgba(0, 0, 0, 0.7);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    padding: 15px 20px;
    z-index: 1000;
}

    .site-header .container {
        display: flex;
        justify-content: center; /* Center the content */
        align-items: center;
    }

    .site-header .row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%; /* Make row take full width of container */
    }

.site-header-text {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: #fff;
    font-weight: 700;
    font-family: 'Unbounded', sans-serif;
    font-size: 1.5rem;
    margin-right: auto; /* Push logo to the left */
}

    .site-header-text i {
        margin-right: 8px;
        font-size: 1.8rem;
    }

.social-icon {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    align-items: center;
}

.social-icon-item {
    margin-left: 15px;
}

.social-icon-link {
    color: #fff;
    font-size: 1.2rem;
    text-decoration: none;
    opacity: 0.7;
    transition: opacity 0.3s ease;
}

    .social-icon-link:hover {
        opacity: 1;
    }

.custom-btn {
    background-color: transparent;
    color: #fff;
    border: 2px solid #fff;
    padding: 8px 15px;
    border-radius: 25px;
    text-decoration: none;
    transition: color 0.3s ease, color 0.3s ease;
    margin-left: 20px; /* Add space before the button */
}

    .custom-btn:hover {
        background-color: #fff;
        color: #000;
    }

.offcanvas-icon {
    color: #fff;
    font-size: 1.5rem;
    cursor: pointer;
    margin-left: 20px; /* Add space before the offcanvas icon */
}

.offcanvas {
    background-color: #111;
    color: #fff;
}

.offcanvas-header .btn-close {
    color: #fff;
    opacity: 0.7;
}

.offcanvas-body nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
    text-align: center;
}

    .offcanvas-body nav ul li {
        margin-bottom: 15px;
    }

        .offcanvas-body nav ul li a {
            color: #fff;
            text-decoration: none;
            font-size: 1.1rem;
            opacity: 0.8;
            transition: opacity 0.3s ease;
        }

            .offcanvas-body nav ul li a.active,
            .offcanvas-body nav ul li a:hover {
                opacity: 1;
            }

.modal-content {
    background-color: #222;
    color: #fff;
    border: none;
    border-radius: 10px;
}

.modal-header {
    border-bottom: 1px solid #333;
}

.modal-title {
    color: #fff;
}

.modal-body .form-control {
    margin-bottom: 15px;
    border-radius: 25px;
    background-color: #333;
    border: none;
    color: #fff;
    padding: 10px 15px;
}

    .modal-body .form-control::placeholder {
        color: #777;
    }

.modal-body button.form-control {
    background-color: #fff;
    color: #000;
    border: none;
    padding: 12px 20px;
    cursor: pointer;
    border-radius: 25px;
    transition: color 0.3s ease, color 0.3s ease;
}

    .modal-body button.form-control:hover {
        background-color: #eee;
        color: #111;
    }

.modal-footer {
    border-top: 1px solid #333;
    justify-content: center;
}

.hero-title {
    color: #fff;
    font-family: 'Unbounded', sans-serif;
    font-weight: 700;
    font-size: 2.5rem;
    text-align: center; /* Centra el título dentro del formulario */
    margin-bottom: 2rem; /* Añade un poco más de espacio debajo del título */
}

.custom-form {
    background-color: rgba(0, 0, 0, 0.5);
    padding: 40px;
    border-radius: 20px;
    width: 100%; /* Permite que el formulario ocupe el ancho de su contenedor */
    max-width: 450px; /* Limita el ancho máximo del formulario */
}

    .custom-form .form-floating > .form-control {
        background-color: #333;
        color: #fff;
        border-radius: 20px;
        margin-bottom: 20px;
        transition: background-color 0.7s ease;
    }

    .custom-form .form-floating > label {
        background-color: #333;
        color: #fff; /* color tipo de letra*/
        border-radius: 20px; /* para redondear los botones*/
        margin-bottom: 20px; /* para separar los botones de los contenedores*/
        transition: background-color 0.7s ease;
    }

    .custom-form button.form-control {
        background-color: #143B5B; /* color de los botones*/
        color: #fff;
        padding: 12px 20px;
        font-size: 1rem;
        border-radius: 20px;
        transition: background-color 0.7s ease;
    }

        .custom-form button.form-control:hover {
            background-color: #143B5B;
        }

.video-wrap {
    position: fixed; /* Cambiado a fixed para que ocupe toda la ventana */
    top: 0;
    left: 0;
    width: 100vw; /* 100% del ancho del viewport */
    height: 100vh; /* 100% del alto del viewport */
    overflow: hidden;
    z-index: -1;
}

.custom-video {
    position: absolute;
    top: 50%;
    left: 50%;
    min-width: 100vw;
    min-height: 100vh;
    width: auto;
    height: auto;
    transform: translateX(-50%) translateY(-50%);
    object-fit: cover; /* Cubre todo el contenedor sin deformar la proporción */
}

</style>
</head>
<body>

    <main>
         <!-- Offcanvas Menu -->
        @* Offcanvas Menu - Aquí es donde se añadirá la lógica para "alba.cshtml" *@
        <div class="offcanvas offcanvas-end" data-bs-scroll="true" tabindex="-1" id="offcanvasMenu" aria-labelledby="offcanvasMenuLabel">
            <div class="offcanvas-header">
                <button type="button" class="btn-close ms-auto" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body d-flex flex-column justify-content-center align-items-center">
                <nav>
                    <ul>
                        <li> <a href="@Url.Action("index", "Home")">Inicio</a></li>
                        @* Mostrar "Ingresar" o "Cerrar Sesión" dependiendo del estado *@
                        @if (User.Identity.IsAuthenticated)
                        {
                                <li> <a href="@Url.Action("Logout", "Home")">Cerrar Sesión</a></li>
                        }
                        else
                        {
                                <li> <a href="@Url.Action("ingresar", "Home")">Ingresar</a></li>
                                <li> <a href="@Url.Action("register", "Home")">Crear una Cuenta</a></li>
                        }

                        @* Enlaces generales, visibles para todos *@
                        <li> <a href="@Url.Action("passwordreset", "Home")">Cambiar Contraseña</a></li>
                        <li> <a href="@Url.Action("dudas", "Home")">Contacto</a></li>
                        <li> <a href="@Url.Action("historial", "Home")">Historial</a></li>
                        <li> <a href="@Url.Action("nosotros", "Home")">Nosotros</a></li>
                        <li> <a href="@Url.Action("paginainformativa", "Home")">Pagina Informativa</a></li>
                        <li> <a href="@Url.Action("politica", "Home")">Politica de Privacidad</a></li> @* Corrección tipográfica *@
                        <li> <a href="@Url.Action("productos", "Home")">Productos</a></li>

                        <li> <a href="@Url.Action("reglas", "Home")">Reglamento</a></li>
                        <li> <a href="@Url.Action("dash", "Home")">Dashboard</a></li>

                        @* --- NUEVO: Enlace a alba.cshtml visible SÓLO para Administradores --- *@
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Administrador"))
                        {
                                <li> <a href="@Url.Action("alba", "Home")">Administración de Alba</a></li>
                                <li> <a href="@Url.Action("puntosacumulados", "Home")">Puntos Acumulados</a></li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
        <section class="hero-section">
            <div class="project-content">
                <h2 class="project-title">RESTABLECER CONTRASEÑA</h2>

                <div class="form-container">
                    <form asp-action="PasswordReset" asp-controller="Home" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div> @* Para errores generales *@

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="tu_correo@ejemplo.com" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NuevaContrasena" class="form-label"></label>
                            <input asp-for="NuevaContrasena" class="form-control" required>
                            <span asp-validation-for="NuevaContrasena" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmarContrasena" class="form-label"></label>
                            <input asp-for="ConfirmarContrasena" class="form-control" required>
                            <span asp-validation-for="ConfirmarContrasena" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Cambiar Contraseña</button>
                    </form>
                </div>

                @* Mensajes de éxito/error *@
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                        <div class="alert alert-success mt-3">@ViewBag.Message</div>
                }
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                        <div class="alert alert-danger mt-3">@ViewBag.ErrorMessage</div>
                }

                <div class="text-center mt-5">
                    <a class="btn-orange" href="@Url.Action("ingresar", "Home")">Volver al Inicio de Sesión</a>
                </div>
            </div>
        </section>

    </main>

    <div class="video-wrap">
        <video autoplay="" loop="" muted="" class="custom-video" poster="">
            <source src="videos/video.mp4" type="video/mp4">
            Tu navegador no soporta la etiqueta de video.
        </video>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script> 
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script> 
</body>